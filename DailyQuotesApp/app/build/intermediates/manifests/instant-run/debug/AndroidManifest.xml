<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dailyquotesapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:name="com.example.dailyquotesapp.utilty.MyApp"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/flower"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/MyAppTheme" >

        <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name="com.example.dailyquotesapp.MainActivity"
            android:label="Daily Affirmations" >
        </activity>
        <activity
            android:name="com.example.dailyquotesapp.SplashActivity"
            android:label="Daily Affirmations" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.dailyquotesapp.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>